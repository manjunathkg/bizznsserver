
<%    
   var queryManager = currentNode.getSession().getWorkspace().getQueryManager();  
   var query = queryManager.createQuery("/jcr:root/content/bizzns/cms/*/*/*/element(*, sling:Folder) order by @created descending", "xpath");
   var result = query.execute().getNodes();
%>
<html>
<head>
<title>Bizzns CMS</title>
<%
load("header.esp");
%>
<script type="text/javascript">
  jQuery(document).ready(function() {
    $("a.delete").click(function () { 
   		var id=$(this).attr("id");
                var $dialog = $('<div></div>').html('Are you sure to delete this item?').dialog({
                    bgiframe: true,
                    autoOpen: false,
                    height: 100,
                    modal: true,
                    title: 'Delete item',
                    buttons: {
			'Delete this item': function() {
                                $.ajax({
   					type: "POST",
   					url: id,
   					data: ":operation=deletetag",
   					success: function(msg){
                                            $(this).dialog('close');
                                            location.reload();
   					},
                                        error: function(msg){
                                            alert(msg);
                                            $(this).dialog('close');
                                        }
 				});
                                $.ajax({
   					type: "POST",
   					url: id,
   					data: ":operation=delete",
   					success: function(msg){
                                            $(this).dialog('close');
                                            location.reload();
   					},
                                        error: function(msg){
                                            alert(msg);
                                            $(this).dialog('close');
                                        }
 				});
                    },
			Cancel: function() {
				$(this).dialog('close');
			}
		    }
                });
                $dialog.dialog('open');
   		return false;
	});
    
  });
</script>
<body>



<div id="lCenter">
       
	<div id="desktop">
		<%
		load("menu.esp");
		%>
		<div id="contentPanel" class="centralPanel">
			<h3>Entries</h3>
			<div>
                        <h3><a href='/content/bizzns/cms/.pdf'>Export list</a></h3>
	                <%
			        while(result.hasNext()) {
			        	post = result.nextNode()
			        %> 
                        <p>KGM:: nodes got back = <%= post.getPath() %> </p>
						<h3> <a href="<%= post.getPath() %>.article"><%=post.title%></a> - <a href="<%= post.getPath() %>.edit">EDIT</a> - <a id="<%= post.getPath() %>" class="delete" href="#">DELETE</a> - <a href="<%= post.getPath() %>.pdf"><img alt="Get pdf" src="/libs/images/pdf-icon.png"></a></h3>
					<%
					}
				%>	
				
			</div>
		    </div>
	</div>
</div>

</body>
</html>